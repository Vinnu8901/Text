// --- BaseTest.java ---
files["src/test/java/com/tests/base/BaseTest.java"] = `package com.tests.base;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import io.github.bonigarcia.wdm.WebDriverManager;
import org.testng.annotations.AfterMethod;
import org.testng.annotations.BeforeMethod;

public class BaseTest {
    protected WebDriver driver;

    @BeforeMethod
    public void setUp() {
        // simple setup using WebDriverManager
        WebDriverManager.chromedriver().setup();
        driver = new ChromeDriver();
        driver.manage().window().maximize();
    }

    @AfterMethod
    public void tearDown() {
        if (driver != null) {
            driver.quit();
        }
    }
}
`;

// --- Cucumber TestNG runner (RunCucumberTest.java) ---
files["src/test/java/com/tests/RunCucumberTest.java"] = `package com.tests;

import io.cucumber.testng.AbstractTestNGCucumberTests;
import io.cucumber.testng.CucumberOptions;

@CucumberOptions(
  features = "src/test/resources/features",
  glue = {"com.stepdefs"},
  plugin = {"pretty","html:target/cucumber-reports.html"},
  monochrome = true
)
public class RunCucumberTest extends AbstractTestNGCucumberTests {
  // extends AbstractTestNGCucumberTests which integrates with TestNG
}
`;

// --- Sample step definition (SampleSteps.java) ---
files["src/test/java/com/stepdefs/SampleSteps.java"] = `package com.stepdefs;

import io.cucumber.java.en.Given;
import io.cucumber.java.en.When;
import com.pageobjects.SamplePage;
import com.tests.base.BaseTest;

public class SampleSteps extends BaseTest {
    private SamplePage page;

    @Given("I open the application")
    public void i_open_the_application() {
        page = new SamplePage(driver);
        driver.get("https://your-app.example.com");
    }

    @When("I perform a quick flow")
    public void i_perform_a_quick_flow() throws InterruptedException {
        // example: call a sample action if available
        // e.g., page.clickElem1(); // generated only if locators include elem1
        Thread.sleep(500);
    }
}
`;

